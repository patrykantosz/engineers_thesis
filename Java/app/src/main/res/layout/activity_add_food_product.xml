<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFoodProductActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/mealNameTextView"/>

    <EditText
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/mealNameTextView"
        android:hint="@string/search_product"
        android:id="@+id/foodSearchEditText"/>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@null"
        android:src="@drawable/baseline_photo_camera_black_36dp"
        android:layout_toEndOf="@id/foodSearchEditText"
        android:layout_alignBottom="@id/foodSearchEditText"
        android:layout_marginBottom="5dp"
        android:id="@+id/photoFoodSearchButton"/>

    <ListView
        android:id="@+id/foodProductsListView"
        android:layout_width="wrap_content"
        android:layout_height="556dp"
        android:layout_above="@+id/addNewFoodProductButton"
        android:layout_below="@+id/foodSearchEditText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="26dp"></ListView>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_new_product"
        android:background="@drawable/oval_button"
        android:textColor="@android:color/white"
        android:id="@+id/addNewFoodProductButton"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>